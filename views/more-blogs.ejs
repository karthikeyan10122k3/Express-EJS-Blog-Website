
<div class="container">
  <h2 class=" fw-bold lh-1 text-body-emphasis mt-5 mb-4">More Blogs</h2>
  <div class="list-group">

    <% if (locals.blogged) { %>
      <% let count = 0 %>
      <% blogged.forEach(blog => { %>
        
      <a href="#" class="list-group-item list-group-item-action " aria-current="true">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><span><%= ++count %>.  </span><%= blog.blogTitle %></h5>
          <small><%= blog.blogTime %></small>
        </div>
        <p class="mb-1"><%= blog.blogDescription %></p>
        <small> <%=blog.blogUser %></small>
      </a>
      
      <% }) %>
    <% } %>

    
  </div>
</div>
